#include <ESP8266WiFi.h>
#include <SimpleDHT.h>

int pinDHT11 = 8;
SimpleDHT11 dht11;

const char* ssid = "wifiSSID";
const char* password = "123";
const byte trigPin = 10;
const int echoPin = 9;
unsigned long d;

WiFiServer server(80);

//超音波
unsigned long ping(){
  digitalWrite(trigPin ,HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin ,LOW);

  return pulseIn(echoPin,HIGH , 23200);
  }

void setup() {
  // put your setup code here, to run once:
  pinMode(trigPin , OUTPUT);
  pinMode(echoPin , INPUT);
  Serial.begin(115200);
  delay(10);

  pinMode(2,OUTPUT);
  digitalWrite(2,0);

  //Connect
  Serial.println("Connected to");
  Serial.println(ssid);

  WiFi.begin(ssid,password);
  while(WiFi.status()!= WL_CONNECTED){
    delay(500);
    Serial.print(".");
  }
  Serial.println(""); 
  Serial.println("WiFi connected");

  server.begin();
  Serial.println("Server started");

  Serial.println(WiFi.localIP());
}

void loop() {
  // put your main code here, to run repeatedly:
  WiFiClient client = server.available();
  if(!client){
    return;
  }
  
  Serial.println("new clinet");
  while(!clinet.available()){
    delay(1);
  }

  String req = client.readStringUntil('\r');
  Serial.println(req);
  client.flush();

  //Match the req
  int val;
  if(req.indexOf("/gpio/0")!= -1)
    val =0;
  else if(req.indexOf("/gpio/1")!= -1)
    val =1;
  else{
    Serial.println("invalid request");
    client.stop();
    return;
    }

  digitalWrite(2,val);
  d= ping()/58;

  byte temperature = 0;
  byte humidity = 0;
  int err = SimpleDHTErrSuccess;
  if ((err = dht11.read(pinDHT11, &temperature, &humidity, NULL)) != SimpleDHTErrSuccess) {
    return;
  }
  
  String s = "HTTP/1.1 200 OK\r\nConnect-Type: text/html\r\n\r\n<!DOCTYPE HTML>\r\n<html>\r\nDistance:";
  s+= d ; 
  s+= "cm\r\n Temperature:"
  s+= temperature;
  s+= "C\r\n Humidity:"
  s+= humidity;
  s+= "%\r\n </html>\n";

  client.print(s);
  delay(1);
  Serial.println("Client disconnected");
  
}
